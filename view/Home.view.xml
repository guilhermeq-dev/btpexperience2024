<mvc:View controllerName="com.lab2dev.btpexperience.controller.Home"
    xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
   >
	<m:Page
		showHeader="false"
		enableScrolling="true"
        title="Administração">
        
            
            <!-- TAB BAR DE NAVEGAÇÃO PELO APP -->
            <m:IconTabBar class="sapUiNoContentPadding" selectedKey="administration">
                <m:items>
                    <m:IconTabFilter key="info" text="Cadastro">
                        <m:items>
                            <m:IconTabFilter text="Novos usuários">        
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Aprovação">    
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                    <m:IconTabFilter key="administration" text="Administração">
                        <m:items>
                            <m:IconTabFilter text="Evento">                      
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Agendas">                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Sessões">                              
                            </m:IconTabFilter>
							<m:IconTabFilter text="Empresas">                             
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Pacotes">                              
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Repositório">     
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Usuários">
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                    <m:IconTabFilter key="info" text="Gamificação">
                        <m:items>
                            <m:IconTabFilter text="Tarefas">
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Trilhas">
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                    <m:IconTabFilter key="info" text="Relatórios">
                        <m:items>
                            <m:IconTabFilter text="Ranking">
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Check in">
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Feedbacks">
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                </m:items>
            </m:IconTabBar>

        <l:VerticalLayout class="sapUiSmallMarginBegin sapUiContentPadding" width="auto">
			<m:Title text="Administração" titleStyle="H3" />
			<m:Title text="Empresas" titleStyle="H4" />
		</l:VerticalLayout>
        
       <!-- CONTEÚDO DA PAGINA (TEXTS/BUTTONS/TABLE) -->
		<m:content >
            <m:VBox class="sapUiResponsiveMargin">
                <Table
                    id="tableID"
                    rows="{companyInfo>/}"
                    selectionMode="None"
                    >
                    <extension>
                        <m:OverflowToolbar >
                            <m:Title class="title" text="Empresas ({viewDetails>/totalCompanyCount})"/>
                            <m:ToolbarSpacer/>
                            <m:SearchField class="searchField" width="14rem" liveChange="onSearch" placeholder="Pesquisar" />
                        </m:OverflowToolbar>
                    </extension>
                    <columns>
                        <Column width="4rem">
                            <m:Label text="ID" />
                            <template>
                                <m:Text text="{companyInfo>companyID}" wrapping="false" />
                            </template>
                        </Column>
                        <Column >
                            <m:Label text="Nome (fantasia)" />
                            <template>
                                <m:Label text="{companyInfo>companyName}"/>
                            </template>
                        </Column>
                        <Column >
                            <m:Label text="CNPJ" />
                            <template>
                                <m:Label text="{path: 'companyInfo>corporateCode'}" />
                            </template>
                        </Column>
                        <Column >
                            <m:Label text="Site" />
                            <template>
                                <m:Label text="{companyInfo>webSite}" />
                            </template>
                        </Column>
                        <Column >
                            <m:Label text="E-mail de contato" />
                            <template>
                                <m:Label text="{companyInfo>email}" />
                            </template>
                        </Column>
                        <Column >
                            <m:Label text="Estado" />
                            <template>
                                <m:Label text="{companyInfo>region}" />
                            </template>
                        </Column>
                        <Column width="3.1rem" >
                            <template>
                                <m:Button
                                    icon="sap-icon://navigation-right-arrow"
                                    type="Transparent" 
                                    press="navCompanyDetail"/>
                            </template>
                        </Column>
                    </columns>
                </Table>
            </m:VBox>
		</m:content>
        <!-- FOOTER C/ BOTÃO PARA CADASTRAR NOVA EMPRESA -->
        <m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Adicionar empresa" press="openModal" ariaHasPopup="Dialog" />
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>
