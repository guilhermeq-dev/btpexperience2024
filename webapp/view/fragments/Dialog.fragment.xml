<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <Dialog
        id="openDialog"
        showHeader="false"
        title="Dados da empresa"
        
    >
        
        <HBox>
            <VBox>
                <f:SimpleForm 
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2"
                    singleContainerFullSize="false" >
                    <f:content>
                    <core:Title text="Dados da empresa"/>
                        <Label text="Razão Social" required="true" />
                        <Input value="{formData>/companyName}" placeholder="Texto" />
                        <Label text="CNPJ" required="true" />
                        <Input value="{path: 'formData>/corporateCode'}" placeholder="Texto" />
                        <Label text="Site" required="true" />
                        <Input value="{formData>/webSite}" placeholder="Texto" />
                        <Label text="Pacote de patrocínio" required="true" />
                        <Select items="binding" selectedKey="{formData>/select}" >
                            <items>
                                <core:Item key="" enabled="false" text="Selecione o pacote inicial"/>
                                <core:Item key="opcao1" text="Plano Diamante"/>
                                <core:Item key="opcao2" text="Plano Ouro"/>
                                <core:Item key="opcao3" text="Plano Prata"/>
                                <core:Item key="opcao4" text="Plano Bronze"/>
                            </items>
                        </Select>
                        <core:Title />
                        <Label text="Nome Fantasia" required="true" />
                        <Input value="{formData>/companyName}" placeholder="Texto" />
                        <Label text="Estado" required="true" />
                        <Select items="binding" selectedKey="{formData>/region}" id="selectState">
                            <items>
                                <core:Item key="" enabled="false" text="Selecione o estado"/>
                                <core:Item key="São Paulo" text="São Paulo"/>
                                <core:Item key="Rio de Janeiro" text="Rio de Janeiro"/>
                                <core:Item key="Minas Gerais" text="Minas Gerais"/>
                            </items>
                        </Select>
                        <Label text="E-mail de contato" required="true" />
                        <Input value="{formData>/email}" type="Email" placeholder="Texto"/>
                        <Label text="Logo (imagem)" required="true" />
                        <u:FileUploader
                                width="100%"
                                buttonOnly="true"
                                style="Transparent"
                                buttonText="Clique e escolha um arquivo de imagem"  
                                id="fileUploader"
                                name="myFileUpload"
                                uploadUrl="upload/"
                                tooltip="Upload your file to the local server"
                                uploadComplete="handleUploadComplete"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </HBox>
        <beginButton>
            <Button
                    text="Cadastrar empresa"
                    press="onSendFormData"
                    width=""
                    type="Emphasized"
                >
            </Button>
        </beginButton>
        <endButton>
            <Button
                    text="Cancelar"
                    press="onCancelAddForm"
                    width="4.5rem"
                    type="Ghost"
                >
            </Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>