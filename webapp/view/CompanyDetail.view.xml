<mvc:View
	controllerName="com.lab2dev.btpexperience.controller.CompanyDetail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
	displayBlock="true"
>
    <Page id="idPage" showHeader="false" showNavButton="true" navButtonPress="onNavBack">
        <IconTabBar class="sapUiNoContentPadding">
                <items>
                    <IconTabFilter key="info" text="Cadastro">
                        <items>
                            <IconTabFilter text="Novos usuários">        
                            </IconTabFilter>
                            <IconTabFilter text="Aprovação">    
                            </IconTabFilter>
                        </items>
                    </IconTabFilter>
                    <IconTabFilter key="info" text="Administração">
                        <items>
                            <IconTabFilter text="Evento">                      
                            </IconTabFilter>
                            <IconTabFilter text="Agendas">                                
                            </IconTabFilter>
                            <IconTabFilter text="Sessões">                              
                            </IconTabFilter>
							<IconTabFilter text="Empresas" press="navToCompany">                             
                            </IconTabFilter>
                            <IconTabFilter text="Pacotes">                              
                            </IconTabFilter>
                            <IconTabFilter text="Repositório">     
                            </IconTabFilter>
                            <IconTabFilter text="Usuários">
                            </IconTabFilter>
                        </items>
                    </IconTabFilter>
                    <IconTabFilter key="info" text="Gamificação">
                        <items>
                            <IconTabFilter text="Tarefas">
                            </IconTabFilter>
                            <IconTabFilter text="Trilhas">
                            </IconTabFilter>
                        </items>
                    </IconTabFilter>
                    <IconTabFilter key="info" text="Relatórios">
                        <items>
                            <IconTabFilter text="Ranking">
                            </IconTabFilter>
                            <IconTabFilter text="Check in">
                            </IconTabFilter>
                            <IconTabFilter text="Feedbacks">
                            </IconTabFilter>
                        </items>
                    </IconTabFilter>
                </items>
            </IconTabBar>
            <content>
                <Title text="Administração" class="titleAdm" />
                <ToolbarSpacer/>
                <Title text="Empresas > Detalhes" class="titleCompany" />
                <f:GridList
                    id="gridList"
                >
                    <f:GridListItem>
                        <VBox class="sapUiSmallMargin">
                            <layoutData>
                                <FlexItemData
                                    growFactor="1"
                                    shrinkFactor="0"
                                />
                            </layoutData>

                            <Title
                                text="title"
                                wrapping="true"
                            />
                            <Label
                                text="subtitle"
                                wrapping="true"
                            />
                        </VBox>
                    </f:GridListItem>
            </f:GridList>
        </content>
    </Page>
</mvc:View>