<mvc:View controllerName="com.lab2dev.btpexperience.controller.Home"
    xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
   >
    
	<m:Page
		showHeader="false"
		enableScrolling="false"
        title="Administração">
        
		 <m:customHeader>
                <m:Bar>
                    <m:contentLeft>
                        <!-- Conteúdo à esquerda do cabeçalho, como um botão de navegação -->
                        <m:Button icon="sap-icon://nav-back" press="onBackButtonPress"/>
                    </m:contentLeft>
                    <m:contentMiddle>
                        <!-- Conteúdo central do cabeçalho, como o título -->
                        <m:Title text="Meu Cabeçalho"/>
                    </m:contentMiddle>
                    <m:contentRight>
                        <!-- Conteúdo à direita do cabeçalho -->
                        <m:Button text="Ação" press="onActionButtonPress"/>
                    </m:contentRight>
                </m:Bar>
            </m:customHeader>


        <m:Toolbar class="tabInfo"> 
            <m:IconTabBar>
                <m:items>
                    <m:IconTabFilter key="info" text="Cadastro">
                        <m:items>
                            <m:IconTabFilter text="Novos usuários">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Aprovação">
                                
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                    <m:IconTabFilter key="info" text="Administração">
                        <m:items>
                            <m:IconTabFilter text="Evento">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Agendas">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Sessões">
                                
                            </m:IconTabFilter>
							<m:IconTabFilter text="Empresas" press="navToCompany">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Pacotes">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Repositório">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Usuários">
                                
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                    <m:IconTabFilter key="info" text="Gamificação">
                        <m:items>
                            <m:IconTabFilter text="Tarefas">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Trilhas">
                                
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                    <m:IconTabFilter key="info" text="Relatórios">
                        <m:items>
                            <m:IconTabFilter text="Ranking">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Check in">
                                
                            </m:IconTabFilter>
                            <m:IconTabFilter text="Feedbacks">
                                
                            </m:IconTabFilter>
                        </m:items>
                    </m:IconTabFilter>
                </m:items>
            </m:IconTabBar>
        </m:Toolbar>
        
		<m:content>
            <m:Title text="Administração" class="titleAdm" />
            <m:ToolbarSpacer/>
            <m:Title text="Empresas" class="titleCompany" />
			<Table
                id="tableID"
				rows="{companyInfo>/data}"
				selectionMode="None"
				>
				<extension>
					<m:OverflowToolbar >
						<m:Title id="title" text="Empresas ({companyInfo>/data/length})"/>
                        <m:ToolbarSpacer/>
                        <m:SearchField id="searchField" width="14rem" liveChange="onSearch" placeholder="Pesquisar" />
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column width="5%">
						<m:Label text="ID" />
						<template>
							<m:Text text="{companyInfo>companyID}" wrapping="false" />
						</template>
					</Column>
					<Column width="12rem">
						<m:Label text="Nome (fantasia)" />
						<template>
							<m:Label text="{companyInfo>companyName}"/>
						</template>
					</Column>
					<Column width="12rem">
						<m:Label text="CNPJ" />
						<template>
							<m:Label text="{companyInfo>corporateCode}" />
						</template>
					</Column>
					<Column width="14rem">
						<m:Label text="Site" />
						<template>
							<m:Label text="{companyInfo>webSite}" />
						</template>
					</Column>
					<Column width="14rem">
						<m:Label text="E-mail de contato" />
						<template>
							<m:Label text="{companyInfo>email}" />
						</template>
					</Column>
					<Column width="14rem">
						<m:Label text="Estado" />
						<template>
							<m:Label text="{companyInfo>region}" />
						</template>
					</Column>
                    <Column width="2rem" >
                        <template>
							<m:Button
								icon="sap-icon://navigation-right-arrow"
								type="Transparent" 
                                press="handleDetailsPress"/>
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
        <m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Adicionar empresa" press="openModal" ariaHasPopup="Dialog" />
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>
